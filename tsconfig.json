{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
		"lib": ["es5", "es2015", "es2016", "es2017", "es2018", "es2019", "es2020", "esnext","DOM"],
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./types"
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}